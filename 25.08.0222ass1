#include <stdio.h>
int main() {
    int i,count=1;
    char str[50];
    printf("enter a string:");
    gets(str);
    for(i=0;str[i]!='\0';i++){
        if(str[i]==' '){
            count++;
        }
    }
    printf("no.of words=%d",count);
    return 0;
}
